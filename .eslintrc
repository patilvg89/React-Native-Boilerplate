{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "prettier",
        "prettier/flowtype",
        "prettier/react",
        "prettier/standard"
    ],
    "plugins": [
        "react",
        "react-native",
        "flowtype",
        "prettier",
        "standard"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "no-use-before-define": 0,
        "class-methods-use-this": 0,
        "react/prop-types": [
            "error",
            {
                "ignore": [
                    "navigation"
                ]
            }
        ],
        "import/no-unresolved": "off"
    },
    "env": {
        "jasmine": true,
        "mocha": true,
        "jest": true,
        "browser": true
    },
    "overrides": [
        {
            "files": [
                "*.spec.js"
            ],
            "rules": {
                "no-unused-expressions": 0
            }
        }
    ]
}